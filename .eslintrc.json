{
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "plugins": ["simple-import-sort"],
  "extends": ["next", "prettier"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["**/features/*/*/**"],
            "message": "Please donâ€™t import/export files directly from under features; always go through index.ts."
          }
        ]
      }
    ],
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "complexity": ["error", 10]
  }
}
